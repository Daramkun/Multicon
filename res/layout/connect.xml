<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/connLayout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:orientation="vertical">
    <TextView android:text="@string/conn_ip_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1"></TextView>
    <EditText android:layout_height="wrap_content" android:text="192.168." android:id="@+id/txtIp" android:layout_width="fill_parent"></EditText>
    <Button android:layout_height="wrap_content" android:text="@string/conn_btn" android:id="@+id/btnConn" android:layout_width="fill_parent"></Button>
    <TextView android:text="@string/recent_list_msg" android:layout_width="wrap_content" android:id="@+id/textView2" android:layout_height="wrap_content"></TextView>
    <Button android:layout_height="wrap_content" android:text="@string/recent_list_clear" android:id="@+id/btnClear" android:layout_width="fill_parent"></Button>
    <ListView android:layout_height="fill_parent" android:id="@+id/lstRecent" android:layout_width="fill_parent"></ListView>
</LinearLayout>
